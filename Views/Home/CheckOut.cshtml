@model Order
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" asp-href-include="/css/checkout.css" asp-append-version="true"/>
    <title>Checkout Page</title>
  </head>

  <body>
    <div class="container">
      <div class="box">
        <h2 class="text-center">Checkout Page</h2>
        <div asp-validation-summary="All"></div>
        <form asp-controller="Home" asp-action="CheckOut" id="checkout-form" method="post">
          <div class="form-group">
            <label asp-for="@Model.Username">Username:</label>
            <input
              type="text"
              class="form-control"
              id="username"
              asp-for="@Model.Username"
              placeholder="Enter username"
              required />
          </div>
          <div class="form-group">
            <label asp-for="@Model.Password">Password:</label>
            <input
              type="password"
              class="form-control"
              id="password"
              asp-for="@Model.Password"
              placeholder="Enter password"
              required />
          </div>
          <div class="form-group">
            <label asp-for="@Model.Email">Email:</label>
            <input
              type="email"
              class="form-control"
              id="email"
              asp-for="@Model.Email"
              placeholder="Enter email"
              required />
          </div>
          <div class="form-group">
            <label asp-for="@Model.CardNumber">Card Number:</label>
            <input
              type="number"
              class="form-control"
              id="card-number"
              asp-for="@Model.CardNumber"
              placeholder="Enter card number"
              required />
          </div>
          <div class="form-group">
            <label asp-for="@Model.Expiry">Expiry Date:</label>
            <input
              type="date"
              class="form-control"
              id="expiry-date"
              asp-for="@Model.Expiry"
              placeholder="Enter expiry date"
              required />
          </div>
          <div class="form-group">
            <label asp-for="@Model.CVV">CVV:</label>
            <input
              type="text"
              class="form-control"
              id="cvv"
              asp-for="@Model.CVV"
              placeholder="Enter CVV"
              required />
          </div>

          <button type="submit" class="btn btn-primary btn-block">
            Submit
          </button>
        </form>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
